<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello There !"
            android:textSize="50dp"
            android:textColor="#290070"
            android:layout_marginBottom="15dp"></TextView>

        <EditText
            android:id="@+id/emailtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/passwordback"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="175dp" />

        <EditText
        android:id="@+id/passwrdtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
            android:background="@drawable/passwordback"
        android:inputType="textPassword"
        android:hint="password"
        android:gravity="center"
            android:layout_marginBottom="20dp"

            tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="246dp" />

        <Button
            android:id="@+id/signinbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/loginbuut"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User ?? Register here"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="468dp" /></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>